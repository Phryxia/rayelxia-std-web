{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "noEmit": true,
    "erasableSyntaxOnly": true,
    "verbatimModuleSyntax": true,
    "allowImportingTsExtensions": true,
    "skipLibCheck": true,
    "paths": {
      "@shared/*": ["./packages/shared/*"]
    }
  }
}
